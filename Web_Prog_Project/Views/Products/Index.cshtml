@model IEnumerable<Web_Prog_Project.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<h2>Index</h2>

<p>
    <a class="btn btn-primary btn-lg" href="@Url.Action("Create","Products")">Add New Products</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Catagory.Catagory_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product_Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product_Picture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product_Sale_Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product_Purchase_Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Catagory.Catagory_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_Description)
        </td>
        <td>
            <img height="75" width="75" src="@Url.Content(item.Product_Picture)" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_Sale_Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_Purchase_Price)
        </td>
        <td>
            <a class="btn btn-danger glyphicon glyphicon-edit" href="@Url.Action("Edit", "Products", new {id=item.Product_ID} )"></a>
            <a class="btn btn-success glyphicon glyphicon-book" href="@Url.Action("Details", "Products", new {id=item.Product_ID} )"></a>
            <a class="btn btn-warning glyphicon glyphicon-trash" href="@Url.Action("Delete", "Products", new {id=item.Product_ID} )"></a>
        </td>
    </tr>
}

</table>
